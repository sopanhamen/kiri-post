{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "paths": {
            "@pages/*": ["src/pages/*"],
            "@layout/*": ["src/layouts/*"],
            "@shared/*": ["src/shared/*"],
            "@store/*": ["src/store/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "src/pages/index.js",
        "src/pages/_app.js",
        "next-i18next.config.ts",
        "lib/config/next-i18next.config.js"
    ],
    "exclude": ["node_modules"]
}
